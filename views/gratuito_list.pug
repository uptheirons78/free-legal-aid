extends layout

block content
  h1.page_title= title
  table.table
    thead
      tr
        th Fasc.
        th Cliente
        th Mat.
        th Giud.
        th Sede
        th RG
        th Data Istanza
        th Prot. Ist.
        th Ammissione
        th Data Amm.
        th Ist. Liq.
        th Data Liq.
        th Imp. Ist. Liq.
        th Decr. Liq.
        th Data Decr. Liq.
        th Imp. Decr. Liq.
        th Fatt.
        th Data Fatt.
        th Imp. Fatt.
        th Pag.
        th Data Pag.
    tbody.gratuito-list
      each gratuito in gratuito_list
        tr
          td
            a(href=gratuito.url) #{gratuito.fascicolo}
          td #{gratuito.cliente.nome_completo}
          td #{gratuito.materia.nome.slice(0,3)}
          td #{gratuito.giudice.nome.slice(0,12)}
          td #{gratuito.sede.nome.slice(0,3)}
          td #{gratuito.rg}
          td #{gratuito.data_istanza_formattata}
          td #{gratuito.protocollo_istanza}
          td #{gratuito.ammissione}
          td #{gratuito.data_ammissione_formattata}
          td #{gratuito.istanza_liquidazione}
          td #{gratuito.data_istanza_liquidazione_formattata}
          td #{gratuito.importo_istanza_liquidazione_formattato}
          td #{gratuito.decreto_liquidazione}
          td #{gratuito.data_decreto_liquidazione_formattata}
          td #{gratuito.importo_decreto_liquidazione_formattato}
          td #{gratuito.fatturazione}
          td #{gratuito.data_fattura_formattata}
          td #{gratuito.importo_fattura_formattato}
          td #{gratuito.pagamento}
          td #{gratuito.data_pagamento_formattata}


      else
        tr
          td Non ci sono pratiche di gratuito patrocinio.