extends layout

block content

  br
  h1.page_title #{title}
  br
  .container
    .row
      .col-md-offset-3.col-md-6.modulo
        form(method='POST' action='')
          div.form-group
            input#nome.form-control(type='text', placeholder='Inserisci il nome della materia del giudizio' name='nome' required='true' value=(undefined===materia ? '' : materia.nome) )
          button.btn.btn-primary(type='submit') salva

  if errors
    ul
      for error in errors
        li!= error.msg